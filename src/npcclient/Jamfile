SubDir TOP src npcclient ;

Application psnpcclient :
	[ Wildcard *.cpp *.h ] : console
;

CompileGroups psnpcclient : server ;
ExternalLibs psnpcclient : CRYSTAL CEL ;
LinkWith psnpcclient : psnet psengine psrpgrules psutil fparser ;


if $(HAVE_STATIC_PLUGINS) = "yes"
{

SubVariant static ;
Application psnpcclient_static : [ Wildcard *.cpp *.h ] $(extrafiles) : console independent noinstall nohelp ;
CFlags psnpcclient_static : [ FDefines CS_STATIC_LINKED ] ;
LFlags psnpcclient_static : -lcrystalspace_staticplugins-1.3 -lcel_staticplugins-1.3 ;
MsvcDefine psnpcclient_static : CS_STATIC_LINKED ;
LinkWith psnpcclient_static : dbmysqlstatic psnet psengine psrpgrules psutil fparser ;

LinkStaticPlugins psnpcclient_static :
  bindoc
  cpersist
  csddsimg
  csfont
