  <npctype name="HuntingTribe" vel="5.0">
			
    <behavior name="do nothing" decay="0" growth="0" initial="10">
      <wait duration="10" anim="stand" />
    </behavior>

    <!-- Behaviors related to guarding the tribe -->
    <behavior name="GuardTurn" completion_decay="-1" growth="0" initial="0">
      <wait duration="5" anim="stand" />
      <rotate type="tribe_home" min="-45" max="45" anim="walk" ang_vel="10" />
    </behavior>
    <behavior name="GuardHome" decay="1" min="0" growth="0" initial="0">
      <!-- Now start the guard movement -->      
      <!--move vel="$WALK" anim="walk" check_tribe_home="true" out_of_bounds="out of home" /-->
      <loop>
        <locate obj="tribe:home" static="no" />                 <!-- Locate random position within tribe home -->
        <rotate type="locatedest" anim="walk" ang_vel="10" />   <!-- Rotate to face last destination located -->
        <navigate anim="walk" />                                <!-- Local navigation -->
        <wait duration="5" anim="stand" />
      </loop>
    </behavior>
    <react event="out of home"       behavior="GuardTurn" />
    <react event="tribe:guard"       behavior="GuardHome"  delta="100" />

    <behavior name="Explore" completion_decay="-1" growth="0" initial="0" resume="yes">
      <locate obj="waypoint"  static="no" />    <!-- Locate nearest waypoint -->
      <navigate anim="walk" />                  <!-- Local navigation -->
      <locate obj="waypoint" static="no" random="yes" range="80" />
      <wander anim="walk" />                    <!-- Navigate using waypoints -->
      <wait anim="stand" duration="5" />
      <locate obj="tribe:home"  static="no" />
      <wander anim="walk" />                    <!-- Navigate using waypoints -->
      <navigate anim="walk" />                  <!-- Local navigation -->
      <share_memories />
    </behavior>

    <behavior name="Hunt" completion_decay="-1" growth="0" initial="0">
      <locate obj="waypoint"  static="no" />    <!-- Locate nearest waypoint -->
      <navigate anim="walk" />                  <!-- Local navigation -->
      <locate obj="tribe:resource" static="no" random="yes" range="200" />
      <wander anim="walk" />        <!-- Navigate using waypoints -->
      <loop iterations="3">
        <navigate anim="walk" />      <!-- Local navigation -->
	<wait anim="stand" duration="20" />     <!-- Pretend to hunt. -->
        <reward resource="tribe:wealth" count="2" /> <!-- Reward the tribe for hunting -->
        <locate obj="tribe:resource" static="no" random="no" range="80" /> <!-- Get new random pos in field -->
      </loop>
      <locate obj="tribe:home"  static="no" />
      <wander anim="walk" />        <!-- Navigate using waypoints -->
      <navigate anim="walk" />      <!-- Local navigation -->
      <transfer item="tribe:wealth" target="tribe" />
    </behavior>

    <behavior name="MoveTribe" completion_decay="-1" growth="0" initial="0">
      <locate obj="waypoint"  static="no" />    <!-- Locate nearest waypoint -->
      <navigate anim="walk" />                  <!-- Local navigation -->
      <locate obj="tribe:memory:tribe_home" static="no" random="yes" range="800" />
      <wander anim="walk" />        <!-- Navigate using waypoints -->
      <navigate anim="walk" />      <!-- Local navigation -->
      <wait anim="stand" duration="30" />
      <tribe_home /> <!-- This command will move the tribe home to current location -->
    </behavior>

    <behavior name="GoHome" completion_decay="-1" growth="0" initial="15">
      <locate obj="waypoint"  static="no" />    <!-- Locate nearest waypoint -->
      <navigate anim="walk" />                  <!-- Local navigation -->
      <locate obj="tribe:home" />
      <wander anim="walk" />        <!-- Navigate using waypoints -->
      <navigate anim="walk" />      <!-- Local navigation -->
    </behavior>

    <behavior name="Reproduce" completion_decay="-1" growth="0" initial="0">
      <!--  Should include a go home behaviour here first -->
      <wait duration="10" anim="sit" />
      <locate obj="self" /> <!-- Update target for reproduce to be self -->
      <reproduce/>
      <wait duration="10" anim="sit" />
    </behavior>
    <behavior name="Resurrect" completion_decay="200" growth="0" initial="0" when_dead="yes">
      <resurrect/>
    </behavior>
    <behavior name="Memorize" completion_decay="0" growth="0" initial="0" >
      <memorize obj="perception" />
    </behavior>

    <react event="tribe:explore"      behavior="Explore"       delta="100" />
    <react event="location sensed"    behavior="Memorize"      type="hunting_ground" only_interrupt="Explore" />
    <react event="location sensed"    behavior="Memorize"      type="tribe_home" only_interrupt="Explore" />
    <react event="tribe:hunt"         behavior="Hunt"          delta="100" />
    <react event="tribe:reproduce"    behavior="Reproduce"     inactive_only="yes" />
    <react event="tribe:resurrect"    behavior="Resurrect"     inactive_only="yes" when_dead="yes" />
    <react event="inventory:added"    behavior="Memorize"      type="Flesh"/>
    <react event="tribe:move"         behavior="MoveTribe"     delta="100" />
    <react event="tribe:home moved"   behavior="GoHome"        only_interrupt="GuardHome,GuardTurn,do nothing,Reproduce" />
  </npctype>


