<widget_description>

<widget name="PetitionWindow" factory="pawsPetitionWindow" 
        visible="no" savepositions="yes" movable="yes" 
        resizable="no" configurable="yes">
        
    <frame x="0" y="100" width="600" height="350" border="yes" />
    <title resource="Blue Title" text="List Petitions" align="left" close_button="yes"/>
    <bgimage resource="Petitions Background" alpha="128" />
    
    <widget name="PetitionList" factory="pawsListBox">    
        <frame x="35" y="0" width="532" height="176" border="no"/>
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
    <highlight resource="Hightlight" alpha="128" />
        <columns height="20" headings="yes">
            <column width="110" >
                <widget name="GM" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="80" >
                <widget name="Status" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="115" >
                <widget name="Created Date" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="210" >
                <widget name="Petition" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
        </columns>
    
        <attachpoints>
        <attach point="ATTACH_RIGHT" />
            <attach point="ATTACH_TOP" />
            <attach point="ATTACH_LEFT" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <widget name="PetitionTextLabel" factory="pawsTextBox" >
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
        <frame x="40" y="209" width="150" height="20" border="no"/>
        <text string="Petition text:" />
    </widget>

    <widget name="PetitionText" factory="pawsMessageTextBox" >
        <frame x="32" y="227" width="540" height="94" border="no" />
        <font name="/planeshift/data/ttf/LiberationMono-Regular.ttf" r="255" g="255" b="255" size="10" />
    </widget>

    <widget name="Delete Button" factory="pawsButton" toggle="no" id="1" shadows="yes" >
        <frame x="35" y="324" width="94" height="22" border="no" />
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <bgimage resource="Standard Button"/>
        <label text="Delete" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
    </widget>
    
    <widget name="New Button" factory="pawsButton" toggle="no" id="2" shadows="yes" >
        <frame x="150" y="324" width="94" height="22" border="no" />
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <bgimage resource="Standard Button"/>
        <label text="New" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
    </widget>
</widget>



</widget_description>
