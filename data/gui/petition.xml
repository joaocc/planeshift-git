<widget_description>

<widget name="PetitionWindow" factory="pawsPetitionWindow" 
        visible="no" savepositions="yes" movable="yes" 
        resizable="no" configurable="yes" style="New Standard GUI">
        
    <frame x="0" y="100" width="600" height="350" border="yes" />
    <title resource="Scaling Title Bar" text="Manage Petitions" align="left" close_button="yes"/>
    
    <widget name="PetitionList" factory="pawsListBox">    
        <frame x="20" y="20" width="562" height="150" border="no"/>
        <columns height="20" headings="yes">
            <column width="110" >
                <widget name="GM" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="80" >
                <widget name="Status" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="125" >
                <widget name="Created Date" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="240" >
                <widget name="Petition" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
        </columns>
    </widget>

    <widget name="PetitionTextLabel" factory="pawsTextBox" >
        <frame x="25" y="190" width="150" height="20" border="no"/>
        <text string="Petition text:" />
    </widget>

    <widget name="PetitionText" factory="pawsMultilineEditTextBox" >
        <frame x="45" y="215" width="540" height="94" border="yes" />
    </widget>

    <widget name="Delete Button" factory="pawsButton" toggle="no" id="1" shadows="yes" >
        <frame x="20" y="315" width="94" height="22" border="no" />
        <label text="Delete" />
    </widget>
    
    <widget name="New Button" factory="pawsButton" toggle="no" id="2" shadows="yes" >
        <frame x="140" y="315" width="94" height="22" border="no" />
        <label text="New" />
    </widget>

    <widget name="Save Button" factory="pawsButton" toggle="no" id="3" shadows="yes" >
        <frame x="265" y="315" width="94" height="22" border="no" />
        <label text="Save" />
    </widget>

</widget>



</widget_description>
