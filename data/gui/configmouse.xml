<widget_description>

<widget name="ConfigMouse" factory="pawsTreeNode"
        visible="yes" savepositions="no" movable="yes"
        resizable="no">
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="200" g="200" b="200" size="10" scalefont="no" />
    <widget factory="pawsSeqTreeNode">
        <widget factory="pawsWidgetTreeNode">
            <nodewidget>
                <widget factory="pawsTextBox" name="Selection label">
                    <frame x="0" y="0" width="100" height="20" border="no" />
                    <text string="Selection"/>
                </widget>
            </nodewidget>
            <widget factory="pawsSeqTreeNode" name="ContextMenu">
                <attr name="type" value="action"/>
            </widget>
            <widget factory="pawsSeqTreeNode" name="EntitySelect">
                <attr name="type" value="action"/>
            </widget>
        </widget>
        <widget factory="pawsWidgetTreeNode">
            <nodewidget>
                <widget factory="pawsTextBox" name="Settings label">
                    <frame x="0" y="0" width="100" height="20" border="no" />
                    <text string="Settings"/>
                </widget>
            </nodewidget>
            <widget factory="pawsSeqTreeNode" name="InvertMouse">
                <attr name="type" value="onoff"/>
            </widget>
            <widget factory="pawsSeqTreeNode" name="HorzSensitivity">
                <attr name="type" value="natnum"/>
            </widget>
            <widget factory="pawsSeqTreeNode" name="VertSensitivity">
                <attr name="type" value="natnum"/>
            </widget>
        </widget>
    </widget>

</widget>

</widget_description>
