<widget_description>

<widget name="PetStatWindow" factory="pawsPetStatWindow" 
        visible="no" savepositions="yes" movable="yes" 
        resizable="no" configurable="yes">
        
    <frame x="50" y="50" width="430" height="500" border="yes" />
    <title resource="Blue Title" text="Your Familiars Stats and Skills" align="left" close_button="yes" />
    <bgimage resource="Skills Background" alpha="128" />
    
    <!-- Feeling stats (HP, Mana, Stamina) -->
    <widget name="HPLbl" factory="pawsTextBox" >
        <frame x="25" y="30" width="120" height="20" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="9" />
        <text string="HP" />
    </widget>
    <widget name="ManaLbl" factory="pawsTextBox" >
        <frame x="25" y="50" width="120" height="20" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="9" />
        <text string="Mana" />
    </widget>
    <widget name="PysStaminaLbl" factory="pawsTextBox" >
        <frame x="25" y="70" width="120" height="20" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="9" />
        <text string="Phys Stam." />
    </widget>
    <widget name="MenStaminaLbl" factory="pawsTextBox" >
        <frame x="25" y="90" width="120" height="20" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="9" />
        <text string="Men Stam." />
    </widget>
    <!-- Feeling stats Perc -->
    <widget name="HPCurrent" factory="pawsTextBox" >
        <frame x="195" y="30" width="43" height="20" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="9" />
        <text string="0" />
        <subscriptions format="percent" />        
    </widget>
    <widget name="HPTotal" factory="pawsTextBox" >
