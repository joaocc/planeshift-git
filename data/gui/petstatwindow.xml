    <!-- Feeling Stats Bars -->
      <widget name="HPBar" factory="pawsProgressBar">
        <frame x="90" y="33" width="100" height="6" border="no" />
        <!--bgimage resource="Vitals ProgressBar" alpha="255" /-->
        <color     r="50" g="0" b="0" />
        <fadecolor r="255" g="0" b="0" />
    </widget>
    <widget name="ManaBar" factory="pawsProgressBar">
        <frame x="90" y="53" width="100" height="6" border="no" />
        <!--bgimage resource="Vitals ProgressBar" alpha="255" /-->
        <color     r="0"  g="0" b="50" />
        <fadecolor r="120" g="0" b="190" />
    </widget>
    <widget name="PysStaminaBar" factory="pawsProgressBar">
        <frame x="90" y="73" width="100" height="6" border="no" />
