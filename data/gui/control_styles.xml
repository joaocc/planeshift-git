<style1>
    <!-- The whole toolbar, add border="yes" in the control.xml if you want to see a border -->
    <bar width="73" height="257" min_w="30" min_h="60" />
    <buttons width="34" height="34" hide_width="10" hide_height="10" />

    <!-- Here you align your buttons, using X and Y cords NOTE: 1 = 1px in 800x600 -->
    <button name="ShowButtonUp"     y="0" x="0" />
    <button name="ShowButtonDown"   y="0" x="0" />
    <button name="ChatButton"       y="19" x="1" />
    <button name="SkillsButton"    y="53" x="1" />
    <button name="InventoryButton"       y="87" x="1" />
    <button name="QuestButton"   y="121" x="1" />
    <button name="SpellBookButton"      y="155" x="1" />
    <button name="GuildButton"      y="189" x="1" />
    <button name="InfoButton"  y="223" x="1" />
    <!-- Start on new row -->
    <button name="BuddyButton"      y="19" x="35" />
    <button name="GroupButton"      y="53" x="35" />
    <button name="PetitionButton"       y="87" x="35" />
    <button name="ShortcutButton"   y="121" x="35" />
    <button name="OptionsButton"       y="155" x="35" />
    <button name="HelpButton"  y="189" x="35" />
    <button name="QuitButton"     y="223" x="35" />
</style1>

