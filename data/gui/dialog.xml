<widget_description>

<pawsNpcDialogWindow name="NPCDialogWindow" xmlbinding="dlgmenu"
        visible="no" savepositions="yes" movable="yes" scalefont="no" keepaspect="no" configurable="yes" resizable="yes" resizetoscreen="yes" style="New Standard GUI">
        
    <frame x="0" y="100" width="400" height="100" border="yes" />
    <title resource="Scaling Title Bar" text="What will you say?" align="left" close_button="yes" />

    <pawsListBox name="ResponseList" xmlbinding="options" >
        <frame x="10" y="3" width="400" height="80" border="yes" />
        <highlight resource="Hightlight" alpha="128" />
        <columns height="20" xmlbinding="row">
            <column width="380" xmlbinding="text">
                <pawsTextBox name="Name" scalefont="no" border="yes" />
            </column>
            <column width="0" xmlbinding="trig">
                <pawsTextBox name="trigger" visible="no" />
            </column>
        </columns>
    </pawsListBox>
    
</pawsNpcDialogWindow>

</widget_description>
