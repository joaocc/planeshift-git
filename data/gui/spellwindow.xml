<widget_description>

<pawsSpellBookWindow name="SpellBookWindow"
           visible="no" savepositions="yes" movable="yes"
           resizable="no" configurable="yes" style="New Standard GUI">

    <frame x="200" y="200" width="400" height="300" border="yes" />
    <title resource="Scaling Title Bar" text="Spell Book" align="left" close_button="yes"/>

    <pawsButton name="Combine" id="100" tooltip="Combine Glyphs">
        <frame x="148" y="5" width="32" height="32" />
        <bgimage resource="PurifyGlyphButton" />
    </pawsButton>

    <pawsButton name="Cast" id="101" tooltip="Cast Spell">
        <frame x="194" y="5" width="32" height="32" />
        <bgimage resource="CastSpellButton" />
    </pawsButton>

    <pawsButton name="ActiveMagic" id="102" tooltip="Active Magic">
        <frame x="240" y="5" width="32" height="32" />
        <bgimage resource="ActiveMagicButton" />
    </pawsButton>

    <pawsMessageTextBox name="SpellImage" style="Fancy Standard MsgText" >
        <frame x="45" y="50" width="64" height="64" border="yes" />
    </pawsMessageTextBox>

    <pawsMessageTextBox name="Description" style="Fancy Standard MsgText" >
        <frame x="137" y="50" width="245" height="81" border="no" />
    </pawsMessageTextBox>

    <pawsListBox name="SpellList">
        <frame x="22" y="160" width="356" height="110" margin="5" border="no" />
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
        <columns height="32" headings="yes">
            <column width="120"><pawsTextBox name="Name"/> </column>
            <column width="40" ><pawsWidget name="Glyph"/> </column>
            <column width="25" ><pawsWidget name=""/>      </column>
            <column width="25" ><pawsWidget name=""/>      </column>
            <column width="25" ><pawsWidget name="" />     </column>
            <column width="45" ><pawsTextBox name="Way"/>  </column>
            <column width="45" ><pawsTextBox name="Realm"/></column>
        </columns>
    </pawsListBox>

</pawsSpellBookWindow>

</widget_description>
