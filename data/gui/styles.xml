
<styles>


    <!-- note that some widgets have default sizes 
            - it is better to keep them standardized -->
    
    
    <!-- standard noneditable piece of text in a window -->
    <style name="label">
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="8" />
        <frame height="20" />
    </style>

    <!-- bigger noneditable piece of text in a window that can denote a group of widgets -->
    <style name="header">
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
        <frame height="20" />
    </style>
    
    <!-- for inputs where you edit text -->
    <style name="textinput" inherit="label">
        <frame border="yes" />
    </style>
    
    <!-- top level window (i.e. child of mainwidget) -->
    <style name="topwindow" inherit="label" movable="yes" savepositions="yes" configurable="yes">
        <title resource="Blue Title" align="left" close_button="yes" />
        <frame border="yes" />
        <bgimage resource="Standard Background" alpha="128" />
    </style>
    
    <!-- tab window - note that it has standardized relative position -->
    <style name="tabwindow">
        <frame x="5" y="30" border="no"/>
    </style>

    <style name="tabbutton" toggle="yes" >
        <frame width="80" height="22" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" />
        <buttondown resource="Tab Button Down" />
        <buttonup resource="Tab Button Up" />
    </style>
    
    <style name="tabbuttonskills" toggle="yes" >
        <frame width="80" height="22" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" />
        <buttondown resource="Chat Tab Button Down" />
        <buttonup resource="Chat Tab Button Up" />
    </style>
    
    <style name="tabbuttonbanking" toggle="yes" >
	    <frame width="80" height="22" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="10" />
	    <buttondown resource="Banking Tab Button Down" />
	    <buttonup resource="Banking Tab Button Up" />
    </style>

    <style name="tabpanel" >
        <frame border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" />
        <bgimage resource="Grey Background" alpha="0" />
    </style>
    
    <!-- standard button -->
    <style name="button" toggle="no" >
        <frame width="80" height="22" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" />
        <bgimage resource="Standard Button" alpha="0"/>
    </style>

    <!-- red button -->
    <style name="redbutton" toggle="no" >
        <frame width="80" height="22" border="no" />
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="20" />
        <bgimage resource="Glossy Red Button" alpha="0"/>
    </style>

    <!-- scaling red button -->
    <style name="scaleredbutton" toggle="no" >
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="20" />
        <bgimage resource="Scaling Red Button" alpha="0"/>
    </style>

    <style name="nicebutton" toggle="no" >
        <frame width="80" height="22" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" />
        <buttonup resource="Chat Tab Button Up" />
        <buttondown resource="Chat Tab Button Down" />
    </style>
    
    <style name="bankingbutton" toggle="no" >
	    <frame width="80" height="22" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" />
	    <buttonup resource="Banking Tab Button Up" />
	    <buttondown resource="Banking Tab Button Down" />
    </style>

    <style name="checkbox" shadows="yes" >
        <frame width="120" height="20" />
        <text position="right" />
    </style>

    <style name="combobox" >
        <frame height="20" border="yes"/>
        <listbox rows="2" height="20" text="Choose one..."/>
    </style>

    <style name="listbox">
        <frame border="no" margin="5"/>
        <highlight resource="Grey Background" alpha="128" />
        <childborders>
            <colour r="0" g="0" b="0" />
            <colour r="180" g="180" b="180" />
            <colour r="32" g="32" b="32" />
            <colour r="220" g="220" b="220" />
            <colour r="64" g="64" b="64" />
        </childborders>
    </style>

    <style name="New Standard Button" toggle="no" >
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" />
        <bgimage resource="Scaling Button Up" alpha="0"/>
        <buttonup resource="Scaling Button Up" />
        <buttondown resource="Scaling Button Down" />
        <attachpoints>
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="ATTACH_LEFT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
    </style>

    <style name="New Standard TextBox" >
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" />
    </style>

    <style name="New Standard Prompt">
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" bold="yes" />
    </style>

    <style name="New Standard MLB">
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" />
        <bgimage resource="Scaling Widget Background" alpha="0"/>
    </style>

    <style name="New Standard MLE" inherit="New Standard MLB">
        <bgimage resource="Scaling Widget Background" alpha="0"/>
    </style>

    <style name="New Standard Field">
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" />
    </style>

    <style name="New Standard Tab" toggle="yes" >
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" />
        <buttonup resource="Scaling Button Down" />
        <buttondown resource="Scaling Button Up" />
        <buttonspecial resource="Chat Tab Button Special" />
        <attachpoints>
             <attach point="PROPORTIONAL_RIGHT" />
             <attach point="PROPORTIONAL_LEFT" />
             <attach point="ATTACH_TOP" />
        </attachpoints>
    </style>

    <style name="New Standard MsgText" >
        <attachpoints>
            <attach point="ATTACH_RIGHT" />
            <attach point="ATTACH_TOP" />
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="240" g="240" b="200" size="8" scalefont="false" />
    </style>

    <style name="Fancy Standard MsgText" inherit="New Standard MsgText">
        <bgimage resource="Scaling Widget Background" alpha="0"/>
    </style>

    <style name="New Standard ListBox" >
        <highlight resource="Hightlight" alpha="128" />
        <bgimage resource="Scaling Field Background" alpha="0"/>
        <attachpoints>
            <attach point="ATTACH_RIGHT" />
            <attach point="ATTACH_TOP" />
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
    </style>

    <style name="New Standard GUI">
        <bgimage resource="Scaling Widget Background" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="220" g="220" b="220" size="10" scalefont="false" />
        <defaultstyle widget="pawsButton"           style="New Standard Button"/>
        <defaultstyle widget="pawsTextBox"          style="New Standard TextBox"/>
        <defaultstyle widget="pawsMultiLineTextBox" style="New Standard MLB"/>
        <defaultstyle widget="pawsEditTextBox"      style="New Standard Field"/>
        <defaultstyle widget="pawsMessageTextBox"   style="New Standard MsgText"/>
        <defaultstyle widget="pawsListBox"          style="New Standard ListBox"/>
        <defaultstyle widget="pawsMultilineEditTextBox" style="New Standard MLE"/>
    </style>
</styles>
