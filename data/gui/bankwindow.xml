                <radio size="8" on="radioon2" off="radiooff2"/>
	    </widget>
	
	    <widget name="CoinNumber" factory="pawsTextBox" >
		<frame x="27" y="398" width="60" height="15" border="no" />
		<text string="Number of Coins" />
		<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="6" />	
	    </widget>
	
	    <widget name="CoinsToExchange" factory="pawsEditTextBox" tooltip="The number of coins you wish to exchange." >
		<frame x="90" y="395" width="25" height="15" border="no" />
	    </widget>
	
	    <widget name="Exchange" factory="pawsButton" style="nicebutton" id="1103" tooltip="Exchange" >
		<frame x="120" y="395" width="50" height="15" />
