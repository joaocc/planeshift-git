<widget_description>

    <widget name="BankWindow" factory="pawsBankWindow"
            visible="no" savepositions="no" movable="yes" configurable="no"
            resizable="no">

        <frame x="50" y="50" width="200" height="500" border="yes" />
        <title resource="Blue Title" text="Banking" align="left" close_button="yes" />
        <bgimage resource="Buddy Background" />

        <widget name="MoneyButton" factory="pawsButton" style="tabbuttonskills" id="1000" tooltip="Money depositing and withdrawal." >
            <frame x="1" y="0" width="66" />
            <label text="Money" />
        </widget>

        <widget name="ItemButton" factory="pawsButton" style="tabbuttonskills" id="1001" tooltip="Item storage" >
            <frame x="67" y="0" width="66" />
            <label text="Items" />
        </widget>

        <widget name="AdminButton" factory="pawsButton" style="tabbuttonskills" id="1002" tooltip="Administrative banking" >
            <frame x="133" y="0" width="66" />
            <label text="Admin" />
        </widget>

        <widget name="MoneyWindow" factory="pawsWidget" id="1100" visible="no" savepositions="no" movable="no" configurable="no" resizable="no">
            <frame x="1" y="21" width="197" height="475" />
            <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="8" />

            <widget name="Money" factory="pawsTextBox" >
                <frame x="40" y="5" width="140" height="20" border="no" />
                <text string="Withdraw and Deposit" />
		<text horizAdjust="CENTRE" />
            </widget>

            <widget name="MoneyOnAccount" factory="pawsTextBox" >
                <frame x="40" y="35" width="120" height="20" border="no" />
                <text string="Money on your Account" />
		<text horizAdjust="CENTRE" />
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="8" />
            </widget>

            <widget name="CirclesCanWithdraw" factory="pawsTextBox" tooltip="Circles available to withdraw." >
                <frame x="30" y="55" width="30" height="15" border="no" />
            </widget>

            <widget name="OctasCanWithdraw" factory="pawsTextBox" tooltip="Octas available to withdraw." >
                <frame x="70" y="55" width="30" height="15" border="no" />
            </widget>

            <widget name="HexasCanWithdraw" factory="pawsTextBox" tooltip="Hexas available to withdraw." >
                <frame x="110" y="55" width="30" height="15" border="no" />
            </widget>

            <widget name="TriasCanWithdraw" factory="pawsTextBox" tooltip="Trias available to withdraw." >
                <frame x="150" y="55" width="30" height="15" border="no" />
            </widget>

	    <widget name="CirclesImage" factory="pawsTextBox" >
		<frame x="30" y="60" width="30" height="30" border="no" />
		<bgimage resource="MoneyCircles" />
	    </widget>

	    <widget name="OctasImage" factory="pawsTextBox" >
		<frame x="71" y="60" width="28" height="28" border="no" />
		<bgimage resource="MoneyOctas" />
	    </widget>

	    <widget name="HexasImage" factory="pawsTextBox" >
		<frame x="110" y="60" width="30" height="30" border="no" />
		<bgimage resource="MoneyHexas" />
	    </widget>

	    <widget name="TraisImage" factory="pawsTextBox" >
		<frame x="150" y="60" width="30" height="30" border="no" />
		<bgimage resource="MoneyTrias" />
	    </widget>

	    <widget name="WantToWithdraw" factory="pawsTextBox" >
		<frame x="40" y="105" width="120" height="20" border="no" />
		<text string="Want to withdraw..." />
		<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="8" />
	    </widget>

	    <widget name="CirclesToWithdraw" factory="pawsEditTextBox" tooltip="The number of circles you wish to withdraw." >
                <frame x="30" y="125" width="30" height="15" border="no" />
            </widget>

            <widget name="OctasToWithdraw" factory="pawsEditTextBox" tooltip="The number of octas you wish to withdraw." >
                <frame x="70" y="125" width="30" height="15" border="no" />
            </widget>

            <widget name="HexasToWithdraw" factory="pawsEditTextBox" tooltip="The number of hexas you wish to withdraw." >
                <frame x="110" y="125" width="30" height="15" border="no" />
            </widget>

            <widget name="TriasToWithdraw" factory="pawsEditTextBox" tooltip="The number of trias you wish to withdraw." >
                <frame x="150" y="125" width="30" height="15" border="no" />
            </widget>

            <widget name="Withdraw" factory="pawsButton" style="nicebutton" id="1101" tooltip="Withdraw" >
                <frame x="75" y="145" width="50" height="15"  />
                <label text="Withdraw" />
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="6" />
            </widget>
	    
	    <widget name="WantToDeposit" factory="pawsTextBox" >
		<frame x="40" y="175" width="120" height="20" border="no"/>
		<text string="Want to deposit..." />
		<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="8" />
	    </widget>

            <widget name="CirclesToDeposit" factory="pawsEditTextBox" tooltip="The number of circles you wish to deposit." >
                <frame x="30" y="195" width="30" height="15" border="no" />
            </widget>

            <widget name="OctasToDeposit" factory="pawsEditTextBox" tooltip="The number of octas you wish to deposit." >
                <frame x="70" y="195" width="30" height="15" border="no" />
            </widget>

            <widget name="HexasToDeposit" factory="pawsEditTextBox" tooltip="The number of hexas you wish to deposit." >
                <frame x="110" y="195" width="30" height="15" border="no" />
            </widget>

            <widget name="TriasToDeposit" factory="pawsEditTextBox" tooltip="The number of trias you wish to deposit." >
                <frame x="150" y="195" width="30" height="15" border="no" />
            </widget>

            <widget name="Deposit" factory="pawsButton" style="nicebutton" id="1102" tooltip="Deposit" >
                <frame x="75" y="215" width="50" height="15" />
                <label text="Deposit" />
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="6" />
            </widget>

            <widget name="MoneyinPocket" factory="pawsTextBox" >
                <frame x="40" y="245" width="120" height="20" border="no" />
                <text string="Money in your Pocket" />
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="8" />
            </widget>

            <widget name="CirclesCanDeposit" factory="pawsTextBox" tooltip="Circles available to deposit." >
                <frame x="30" y="265" width="30" height="15" border="no" />
            </widget>

            <widget name="OctasCanDeposit" factory="pawsTextBox" tooltip="Octas available to deposit." >
                <frame x="70" y="265" width="30" height="15" border="no" />
            </widget>

            <widget name="HexasCanDeposit" factory="pawsTextBox" tooltip="Hexas available to deposit." >
                <frame x="110" y="265" width="30" height="15" border="no" />
            </widget>

            <widget name="TriasCanDeposit" factory="pawsTextBox" tooltip="Trias available to deposit." >
                <frame x="150" y="265" width="30" height="15" border="no" />
            </widget>

	    <widget name="CirclesImage" factory="pawsTextBox" >
		    <frame x="30" y="270" width="30" height="30" border="no" />
		    <bgimage resource="MoneyCircles" />
	    </widget>
	    
	    <widget name="CirclesImage" factory="pawsTextBox" >
		    <frame x="71" y="270" width="28" height="28" border="no" />
		    <bgimage resource="MoneyOctas" />
	    </widget>
	    
	    <widget name="CirclesImage" factory="pawsTextBox" >
		    <frame x="110" y="270" width="30" height="30" border="no" />
		    <bgimage resource="MoneyHexas" />
	    </widget>
	    
	    <widget name="CirclesImage" factory="pawsTextBox" >
		    <frame x="150" y="270" width="30" height="30" border="no" />
		    <bgimage resource="MoneyTrias" />
	    </widget>

            <widget name="MoneyExchange" factory="pawsTextBox" >
               <frame x="40" y="315" width="110" height="20" border="no" />
               <text string="Want to Exchange..." />
            </widget>

            <widget name="MoneyExchangeInfo" factory="pawsTextBox" >
               <frame x="40" y="335" width="200" height="12" border="no" />
               <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="5" />
            </widget>

            <widget name="CirclesCanExchange" factory="pawsTextBox" tooltip="The number of circles that you may exchange." >
                <frame x="30" y="355" width="30" height="15" border="no" />
            </widget>

            <widget name="OctasCanExchange" factory="pawsTextBox" tooltip="The number of octas that you may exchange." >
                <frame x="70" y="355" width="30" height="15" border="no" />
            </widget>

            <widget name="HexasCanExchange" factory="pawsTextBox" tooltip="The number of hexas that you may exchange." >
                <frame x="110" y="355" width="30" height="15" border="no" />
            </widget>

            <widget name="TriasCanExchange" factory="pawsTextBox" tooltip="The number of trias that you may exchange." >
                <frame x="150" y="355" width="30" height="15" border="no" />
            </widget>

            <widget name="Circles" factory="pawsRadioButton" id="1104">
                <frame x="25" y="370" width="45" height="11" />
                <text string="Circles" position="right"/>
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="5" />
                <radio size="8" on="radioon2" off="radiooff2"/>
            </widget>

            <widget name="Octas" factory="pawsRadioButton" id="1105">
                <frame x="65" y="370" width="45" height="11" />
                <text string="Octas" position="right"/>
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="5" />
                <radio size="8" on="radioon2" off="radiooff2"/>
            </widget>

           <widget name="Hexas" factory="pawsRadioButton" id="1106">
                <frame x="105" y="370" width="45" height="11" />
                <text string="Hexas" position="right"/>
                <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="5" />
                <radio size="8" on="radioon2" off="radiooff2"/>
            </widget>

            <widget name="Trias" factory="pawsRadioButton" id="1107">
                <frame x="145" y="370" width="45" height="11" />
