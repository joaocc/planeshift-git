<widget_description>

    <widget name="PetitionGMWindow" factory="pawsPetitionGMWindow"
            visible="no" savepositions="yes" movable="yes"
            resizable="no" style="New Standard GUI">

        <frame x="0" y="100" width="600" height="350" border="yes" />
        <title resource="Scaling Title Bar" text="Manage Petitions" align="left" close_button="yes" />

        <widget name="PetitionList" factory="pawsListBox">
            <frame x="25" y="12" width="545" height="160" border="no"/>
            <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
            <columns height="20" headings="yes">
                <column width="25" >
                    <pawsTextBox name="Lvl" />
                </column>
                <column width="80" >
                    <pawsTextBox name="GM" />
                </column>
                <column width="80" >
                    <pawsTextBox name="Player" />
                </column>
                <column width="40" >
                    <pawsTextBox name="Online" />
                </column>
                <column width="75" >
                    <pawsTextBox name="Status" />
                </column>
                <column width="105" >
                    <pawsTextBox name="Created Date" />
                </column>
                <column width="200">
                    <pawsTextBox name="Petition" />
                </column>
            </columns>

             <attachpoints>
                 <attach point="ATTACH_RIGHT" />
                 <attach point="ATTACH_TOP" />
                 <attach point="ATTACH_LEFT" />
                 <attach point="PROPORTIONAL_BOTTOM" />
             </attachpoints>

        </widget>

        <widget name="PetitionTextLabel" factory="pawsTextBox" style="New Standard Prompt">
            <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
            <frame x="40" y="180" width="150" height="20" border="no"/>
            <text string="Petition text:" />
        </widget>

        <widget name="PetitionText" factory="pawsMessageTextBox" style="Fancy Standard MsgText">
            <frame x="25" y="200" width="545" height="105" />
        </widget>

        <widget name="Admin Petition" factory="pawsButton" id="8" >
            <frame x="20" y="324" width="75" height="22" />
            <label text="Admin" />
        </widget>

        <widget name="Assign Button" factory="pawsButton" id="2" >
            <frame x="100" y="324" width="75" height="22" />
            <label text="Claim" />
        </widget>

        <widget name="Unassign Button" factory="pawsButton" id="3" >
            <frame x="180" y="324" width="75" height="22" />
            <label text="Unclaim" />
        </widget>

        <widget name="Escalate Button" factory="pawsButton" id="4" >
            <frame x="260" y="324" width="75" height="22" />
            <label text="Escalate" />
        </widget>

        <widget name="Descalate Button" factory="pawsButton" id="5" >
            <frame x="340" y="324" width="75" height="22" />
            <label text="Descalate" />
        </widget>

        <widget name="Close Button" factory="pawsButton" id="6"  >
            <frame x="420" y="324" width="75" height="22" />
            <label text="Close" />
        </widget>

        <widget name="Cancel Button" factory="pawsButton" id="7" >
            <frame x="500" y="324" width="75" height="22" />
            <label text="Delete" />
        </widget>

    </widget>
</widget_description>
