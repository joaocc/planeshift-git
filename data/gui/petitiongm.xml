<widget_description>

<widget name="PetitionGMWindow" factory="pawsPetitionGMWindow" 
        visible="no" savepositions="yes" movable="yes" 
        resizable="no" >
        
    <frame x="0" y="100" width="600" height="350" border="yes" />
    <title resource="Blue Title" text="Manage Petitions" align="left" close_button="yes" />
    <bgimage resource="Petitions Background" alpha="128" />

    <widget name="PetitionList" factory="pawsListBox">    
        <frame x="35" y="0" width="532" height="176" border="no"/>
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
        <columns height="20" headings="yes">
            <column width="30" >            
                <widget name="Lvl" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="100" >            
                <widget name="Player Name" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="80" >
                <widget name="Status" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="115" >
                <widget name="Created Date" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               
            <column width="207">
                <widget name="Petition" factory="pawsTextBox">
                    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
                </widget>
            </column>                                               

        </columns>
    
         <attachpoints>                               
             <attach point="ATTACH_RIGHT" />                                           
             <attach point="ATTACH_TOP" />  
             <attach point="ATTACH_LEFT" />
             <attach point="PROPORTIONAL_BOTTOM" />
         </attachpoints>
         
    </widget>

    <widget name="PetitionTextLabel" factory="pawsTextBox" >
        <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
        <frame x="40" y="209" width="150" height="20" border="no"/>
        <text string="Petition text:" />
    </widget>

    <widget name="PetitionText" factory="pawsMessageTextBox" >
        <frame x="32" y="227" width="540" height="94" border="no" />
        <font name="/planeshift/data/ttf/LiberationMono-Regular.ttf" r="255" g="255" b="255" size="10" />
    </widget>

    <widget name="Admin Petition" factory="pawsButton" toggle="no" id="7" shadows="yes" >
        <frame x="20" y="324" width="90" height="22" border="no" />
        <bgimage resource="Standard Button"/>
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <label text="Admin" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>            
    </widget>
    
    <widget name="Assign Button" factory="pawsButton" toggle="no" id="2" shadows="yes" >
        <frame x="115" y="324" width="90" height="22" border="no" />
        <bgimage resource="Standard Button"/>
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <label text="Claim" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>            
    </widget>
    
    <widget name="Escalate Button" factory="pawsButton" toggle="no" id="3" shadows="yes" >
        <frame x="210" y="324" width="90" height="22" border="no" />
        <bgimage resource="Standard Button"/>
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <label text="Escalate" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>            
    </widget>    
    
    <widget name="Descalate Button" factory="pawsButton" toggle="no" id="4" shadows="yes" >
        <frame x="305" y="324" width="90" height="22" border="no" />
        <bgimage resource="Standard Button"/>
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <label text="Descalate" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>            
    </widget>    
    
    <widget name="Close Button" factory="pawsButton" toggle="no" id="5" shadows="yes" >
        <frame x="400" y="324" width="90" height="22" border="no" />
        <bgimage resource="Standard Button"/>
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <label text="Close" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>            
    </widget>    
    
    <widget name="Cancel Button" factory="pawsButton" toggle="no" id="6" shadows="yes" >
        <frame x="495" y="324" width="81" height="22" border="no" />
        <bgimage resource="Standard Button"/>
	<font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="180" g="180" b="180" size="10" />
        <label text="Delete" />

        <attachpoints>
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>            
    </widget>

</widget>



</widget_description>
