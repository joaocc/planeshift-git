        <frame x="100" y="90" width="630" height="285" border="yes"/>
       <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="200" g="200" b="200" size="10" scalefont="no" />
       <bgimage resource="Help Background" alpha="0"/>
        <title resource="Blue Title" text="Help" align="left" close_button="yes"/>
        <widget name="HelpText" factory="pawsMultiLineTextBox">
            <frame x="294" y="29" width="300" height="224" border="no"/>
            <attachpoints>
                <attach point="ATTACH_RIGHT"/>
                <attach point="ATTACH_TOP"/>
                <attach point="ATTACH_LEFT"/>
                <attach point="ATTACH_BOTTOM"/>
            </attachpoints>
        </widget>
    </widget>
</widget_description>
