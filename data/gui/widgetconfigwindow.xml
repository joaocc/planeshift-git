    </widget>


    <!-- FadeSpeed scrollbar -->
    <widget name="FadeSpeedScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="45" width="100" height="15" border="no" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- FadeSpeed progressbar-->
    <widget name="FadeSpeedProgressBar" factory="pawsProgressBar" >
        <frame x="155" y="50" width="65" height="7" border="no" />
