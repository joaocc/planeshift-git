<widget_description>

<widget name="Window Settings" factory="widgetconfigwindow" 
        visible="yes" savepositions="yes" movable="yes" 
        resizable="yes" >

    <frame x="200" y="200" width="300" height="135" border="yes" />
    <minframe width="300" height="135" />
    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" size="12" />
    <title resource="Blue Title" text="Window Settings" align="left" close_button="yes" />
    <bgimage resource="Standard Background" alpha="50" />

    <!-- Min Alpha scrollbar -->
    <widget name="MinAlphaScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="25" width="100" height="15" border="no" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- Min Alpha progressbar-->
    <widget name="MinAlphaProgressBar" factory="pawsProgressBar">
        <frame x="155" y="30" width="65" height="7" border="no" />
        <color     r="0" g="50" b="0" />
        <fadecolor r="0" g="255" b="0" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- Min Alpha Current % -->
    <widget name="MinAlphaCurrentPct" factory="pawsTextBox">
        <frame x="245" y="28" width="40" height="20" border="no"/>
        <text string="100%" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- Min Alpha -->
    <widget name="MinAlphaText" factory="pawsTextBox">
        <frame x="10" y="28" width="140" height="20" border="no"/>
        <text string="Min. Transparency:" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- Max Alpha scrollbar -->
    <widget name="MaxAlphaScroll" factory="pawsScrollBar" direction="horizontal" >
        <frame x="140" y="7" width="100" height="15" border="no" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- Max Alpha progressbar-->
    <widget name="MaxAlphaProgressBar" factory="pawsProgressBar">
        <frame x="155" y="13" width="65" height="7" border="no"/>
        <color     r="0" g="0" b="50" />
        <fadecolor r="0" g="0" b="255" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- Max Alpha 100% -->
    <widget name="MaxAlphaCurrentPct" factory="pawsTextBox">
        <frame x="245" y="10" width="40" height="20" border="no"/>
        <text string="100%" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="PROPORTIONAL_BOTTOM" />
