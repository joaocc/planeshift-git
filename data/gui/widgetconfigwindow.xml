            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <!-- OK button -->
    <widget name="OKButton" factory="pawsButton" toggle="no" shadows="yes">
        <frame x="10" y="110" width="80" height="20" border="yes" />
        <buttonup resource="Blue Title"/>
        <buttondown resource="Blue Title" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
        <label text="OK"/>
    </widget>


   <!-- Cancel button -->
    <widget name="CancelButton" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="110" y="110" width="80" height="20" border="yes" />
        <buttonup resource="Blue Title" />
        <buttondown resource="Blue Title" />
        <attachpoints>
            <attach point="PROPORTIONAL_LEFT" />
            <attach point="PROPORTIONAL_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
        <label text="Cancel"/>
   </widget>
   
   <!-- Apply to all button -->
    <widget name="ApplyAllButton" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="210" y="110" width="80" height="20" border="yes" />
        <buttonup resource="Blue Title" />
