<widget_description>

<widget name="skin" factory="pawsSkinWindow" visible="yes" savepositions="no" movable="no" resizable="no" resizetoscreen="yes">

    <bgimage resource="Blue Background" alpha="255" fade="false"/>

    <frame x="0" y="0" width="850" height="600" border="no"/>
    <title resource="Blue Title" text="PlaneShift Setup" align="left"/>

    <widget name="skins" factory="pawsComboBox">
        <frame x="120" y="50" width="200" height="35" border="no"/>
        <listbox rows="4" height="30" text="Choose a skin" alpha="100"/>
    </widget>

    <widget name="desc" factory="pawsMultiLineTextBox">
        <frame x="100" y="100" width="600" height="100" border="no"/>
        <text string=""/>
    </widget>

    <!-- Preview area -->
    <widget name="preview" factory="pawsWidget" visible="yes" savepositions="no" movable="no" resizable="no">
            <frame x="100" y="240" width="600" height="350" border="yes"/>

            <widget name="PreviewButton" factory="pawsButton">
                <frame x="250" y="130" width="130" height="30" border="no"/>
                <label text="Test button"/>
            </widget>

            <widget name="PreviewBox" factory="pawsCheckBox">
                <frame x="250" y="170" width="190" height="30" />
                <text string=" Test checkbox"/>
            </widget>
    </widget>

    <!-- OK button -->
    <widget name="OKButton" factory="pawsButton">
        <frame x="500" y="50" width="130" height="30" border="no"/>
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="9" resizetoscreen="yes"/>
        <buttonup resource="Blue Title"/>
        <buttondown resource="Blue Title"/>
        <label text="OK"/>
    </widget>

   <!-- Cancel button -->
    <widget name="CancelButton" factory="pawsButton" toggle="no" shadows="yes">
        <frame x="650" y="50" width="130" height="30" border="yes"/>
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="9" resizetoscreen="yes"/>
        <buttonup resource="Blue Title"/>
        <buttondown resource="Blue Title"/>
        <label text="Cancel"/>
    </widget>

</widget>

</widget_description>


