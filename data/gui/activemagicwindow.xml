<widget_description>

<widget name="ActiveMagicWindow" factory="pawsActiveMagicWindow"
        visible="no" savepositions="yes" movable="yes" resizable="yes" configurable="yes" style="New Standard GUI"
        keepaspect="no" useImages="true"
        forceText="true" >

    <frame x="600" y="200" width="330" height="90" border="yes" resizable="yes"/>
        <minframe width="100" height="90" /> 
        <maxframe width="2000" height="1000" />
        <bgimage resource="Back" alpha="255" />

    <widget name="BuffBar" factory="pawsScrollMenu">
        <frame x="10" y="5" height="32" width="310" border="no" resizable="yes" />
            <minframe width="100" height="32" /> 
            <maxframe width="2000" height="480" />
        <attachpoints>
            <attach point="ATTACH_RIGHT" />
            <attach point="ATTACH_TOP" />
            <attach point="ATTACH_LEFT" />
            <attach point="PROPORTIONAL_BOTTOM" />
        </attachpoints>
    </widget>

    <widget name="DebuffBar" factory="pawsScrollMenu" >
        <frame x="10" y="47" height="32" width="310" border="no" resizable="yes"  />
            <minframe width="100" height="32" /> 
            <maxframe width="2000" height="480" />
        <attachpoints>
            <attach point="ATTACH_RIGHT" />
            <attach point="PROPORTIONAL_TOP" />
            <attach point="ATTACH_LEFT" />
            <attach point="ATTACH_BOTTOM" />
        </attachpoints>
    </widget>

</widget>

</widget_description>
