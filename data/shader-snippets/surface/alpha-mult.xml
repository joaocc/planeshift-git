<snippet>
  <technique priority="100">
    <combiner name="cg" plugin="crystalspace.graphics3d.shader.combiner.glcg" />

    <input name="inputColor" type="rgba" >
      <attribute name="perfragment" type="bool" defval="true" />
    </input>

    <input name="alpha_factor" type="float" default="complex">
      <block location="shadervars">
        <shadervar name="alpha factor" type="float">1</shadervar>
      </block>

      <block location="cg:variablemap">
        <variablemap variable="alpha factor" destination="fragmentIn.alpha_factor" />
      </block>
  
      <block location="cg:fragmentIn">
        <uniform type="float" name="alpha_factor" />
      </block>

      <block location="cg:fragmentMain">
        alpha_factor = fragmentIn.alpha_factor;
      </block>
    </input>

    <block location="cg:vertexMain">
      outputColor = inputColor;
    </block>

    <block location="cg:fragmentMain">
      outputColor = inputColor;
      outputColor.a *= alpha_factor;
    </block>

    <output name="outputColor" type="rgba">
      <attribute name="perfragment" type="bool" />
    </output>
  </technique>
</snippet>

